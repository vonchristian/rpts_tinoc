<aside class="main-sidebar">
  <section class="sidebar">
    <div class="user-panel">
      <div class="pull-left image">
        <%#=link_to image_tag(current_user.profile_photo.url(:thumb), class: 'img-circle', height: 40, width: 40), info_user_path(current_user) %>
      </div>
      <div class="pull-left info">
        <p><%#=link_to current_user.first_name.try(:titleize), info_user_path(current_user) %></p>
        <a href="#"><i class="fa fa-circle text-success"></i> <%#=current_user.role.titleize %></a>
      </div>
    </div>
  </section>
</aside>

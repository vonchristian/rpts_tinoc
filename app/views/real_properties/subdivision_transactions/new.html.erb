<%= simple_form_for @subdivision, url: :real_property_subdivision_transactions do |f| %>
  <%= f.error_notification %>
  <%= f.input :area %>
  <%= f.input :sub_classification_id, collection: Configurations::SubClassification.all.map{|a| [a.name, a.id] } %>
  <%= f.input :classification_id, collection: Configurations::Classification.all.map{|a| [a.name, a.id] } %>
  <%= f.input :divided_real_property_id, input_html: { value: @real_property.id } %>
  <%= f.submit "Save Subdivision" %>
<% end %>


<%= simple_form_for  @transfer, url: :real_property_transfer_transactions do |f| %>
  <%= f.input :grantor_id, collection: @real_property.property_owners.all.map{ |a| [a.first_name, a.id] } %>
  <%= f.input :grantee_id, collection: Taxpayer.all.map{ |a| [a.first_name, a.id] } %>



  <%= f.input :date_transferred %>
  <%= f.input :remarks %>
  <%= f.input :transferred_real_property_id, input_html: { value: @real_property.id } %>
  <%= f.submit "Save Transfer" %>
<% end %>

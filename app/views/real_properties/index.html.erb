<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title"> Real Properties </h3>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Taxpayer</th>
                <th>Real Property</th>
                <th>Type</th>
                <th>ARP</th>
              </tr>
            </thead>
            <tbody>
              <% @real_properties.each do |real_property| %>
                <tr>
                  <td><%= real_property.taxpayers_name %></td>
                  <td> <%= link_to real_property.description, real_property_url(real_property) %></td>
                  <td><%= real_property.type.to_s.gsub("RealProperties::PropertyTypes::", "")%></td>
                  <td><%= real_property.current_arp %></td>
                  <td><%= real_property.archiving_status %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

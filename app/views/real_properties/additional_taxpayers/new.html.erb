<% Taxpayer.all.each do |taxpayer| %>
  <%= simple_form_for [@real_property, @additional_taxpayer], url: :real_property_additional_taxpayers do |f| %>
    <%= f.input :property_owner_id, input_html: { value: taxpayer.id } %>
    <%= f.input :property_owner_type, input_html: { value: "Taxpayer" } %>

    <%= f.submit "Add Taxpayer" %>
  <% end %>
<% end %>
